<%= render "shared/header" %>

<div class="show-wrapper">
  <div class="show-main">
    <div class="show-nav">
        <div><%= link_to "戻る", root_path %></div>
        <div class="show-menu">
          <div class="show-item-edit"><%= link_to "編集", edit_item_path(@item.id), method: :get %></div>
          <div class="show-item-delete"><%= link_to "削除", item_path(@item.id), method: :delete %></div>
        </div>
    </div>
    <div class="show-contents">
      <div>
        <h1 class="language">言語<h1>
        <div class="detail-language"><%= @item.language.name %></div>
      </div>
      <div>
        <h1 class="title">タイトル</h1>
        <div class="detail-title"><%= @item.title %></div>
      </div>
      <div>
        <h1 class="content">内容</h1>
        <div class="detail-content"><%= @item.content %></div>
      </div>
    </div>
  </div>
</div>